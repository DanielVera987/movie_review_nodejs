<%- include('header.ejs') %>
    <div class="content">
      <section>

      <% movies.forEach((movie) => { %>
        <a href="movie/<%=movie.id%>">
        <article> 
          <header>
            <h2><%=movie.title%></h2>
          </header>
          <figure>
            <img src="<%=movie.image%>" alt="" width="100">
            <figcaption>
              <%=movie.description%>
            </figcaption>
          </figure>
          <footer>
            
          </footer>
        </article>
        </a>
      <% }); %>
      </section>

      <%- include('footer.ejs') %>
    </div>
  </body>
</html>